{
  "name": "cetb-node-api",
  "version": "1.9.3",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build",
    "build": "npm run build-client && npm run build-server",
    "build-dev": "npm run build-dev-client && npm run build-server",
    "build-server": "echo 'Building server...' && rimraf dist && tsc -p tsconfig-build.json",
    "build-client": "echo 'Building client...' && cd client && npm install && npm run build",
    "build-dev-client": "echo 'Building client...' && cd client && npm run build-dev",
    "dev": "nodemon dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "npm run build && docker compose up -d",
    "stop": "docker compose down",
    "lint": "eslint src --ext js,ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand --watch --detectOpenHandles",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@shelf/jest-mongodb": "^4.3.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.10",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "git-commit-msg-linter": "^5.0.7",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mockdate": "^3.0.5",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "email-validator": "^2.0.4",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.6.1",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": "20.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
